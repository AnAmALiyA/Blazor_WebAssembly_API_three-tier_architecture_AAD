@page "/list"
@inject HttpClient Http

<h1>API Test</h1>

<p>This component demonstrates fetching data from the API (server).</p>

@if (listItemAPI == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in listItemAPI)
            {
                <tr>
                    <td>@item</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private string[] listItemAPI;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            listItemAPI = await Http.GetFromJsonAsync<string[]>("APITest");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            throw;
        }
    }
}
